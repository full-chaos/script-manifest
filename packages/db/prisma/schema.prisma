generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  email        String   @unique
  role         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  writerProfile WriterProfile?
}

model WriterProfile {
  id                   String   @id
  userId               String   @unique
  displayName          String
  bio                  String   @default("")
  representationStatus String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id          String   @id
  ownerUserId String
  title       String
  logline     String   @default("")
  synopsis    String   @default("")
  format      String
  genre       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  coWriters ProjectCoWriter[]
  drafts    ProjectDraft[]
}

model ProjectCoWriter {
  projectId     String
  ownerUserId   String
  coWriterUserId String
  creditOrder   Int
  createdAt     DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@id([projectId, coWriterUserId])
}

model ProjectDraft {
  id             String   @id
  projectId       String
  ownerUserId     String
  scriptId        String
  versionLabel    String
  changeSummary   String   @default("")
  pageCount       Int      @default(0)
  lifecycleState  String
  isPrimary       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
